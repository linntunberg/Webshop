@model List<Webshop.Models.HomeViewModel>
@{
    ViewData["Title"] = "Home Page";
}

@foreach (var home in Model)
{<h3>
        <span style="white-space: nowrap">

            <a class="bold" href="/products/get/@(home.Id)">
                @(home.Brand)
            </a>

        </span>
    </h3>
    <img class="thumbnail" src="images/@(home.Image)" alt="image of product">
    <form action="/cart/addtocart/@(home.Id)" method=post>
        <p class="price">Price: $@(home.Price)</p>
    </form>
    <br />
    <br />
}


